<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/opacity"
    android:padding="30dp"
    android:alpha="1.8"
    >

    <LinearLayout
        android:id="@+id/fragLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Plaka No"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:textAlignment="center"
           />
        <TextView
        android:id="@+id/frag_plaka"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:background="@drawable/shapes" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="İsim ve Soyisim"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="3dp" />
    <TextView
        android:id="@+id/frag_namesurname"
        android:layout_width="match_parent"
        android:background="@drawable/shapes"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:layout_height="45dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Şifre"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="3dp" />
    <TextView
        android:id="@+id/frag_pass"
        android:background="@drawable/shapes"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:layout_height="45dp" />


    <Button
        android:id="@+id/frag_changebutton"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:background="@drawable/shapes"
        android:text="@string/profileFrag_button" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/updateLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText

            android:id="@+id/update_plaka"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:hint="Plaka No"
            android:textAlignment="center"
            android:background="@drawable/shapes"
            android:maxLines="1"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/update_namesurname"
            android:layout_width="match_parent"
            android:background="@drawable/shapes"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:hint="İsim Soyisim"
            android:layout_height="45dp"
            android:maxLines="1"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/update_pass"
            android:background="@drawable/shapes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:hint="Şifre"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:singleLine="true"
            />
        <EditText
            android:id="@+id/update_pass1"
            android:background="@drawable/shapes"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:hint="Şifre Tekrar"
            android:layout_height="45dp"
            android:maxLines="1"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/update_changebutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shapes"
            android:text="@string/updateProfile" />

    </LinearLayout>



</RelativeLayout>


