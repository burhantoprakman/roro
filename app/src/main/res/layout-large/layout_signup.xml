<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="vavien.agency.liman.LoginActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="BİZİM LİMANIMIZ,BİZİM GÜVENLİĞİMİZ"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp" />


    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="300dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/nameSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/liman_kurallari"
            android:background="@drawable/shapes"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:hint="@string/namesurname"

            android:textColor="@color/white"
            android:textColorHint="@color/white" />
        <EditText
            android:id="@+id/plakaNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shapes"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:hint="Plaka Giriniz"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/liman_kurallari"/>


        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shapes"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="@string/password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/liman_kurallari"/>

        <EditText
            android:id="@+id/passRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="@string/passwordRepeat"
            android:background="@drawable/shapes"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/liman_kurallari"/>


        <Button
            android:id="@+id/second_sign_up_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shapes"
            android:text="@string/action_sign_up"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
